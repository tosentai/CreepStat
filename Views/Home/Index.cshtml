@using System.Security.Claims
@{
    ViewData["Title"] = "Home Page";
    var identity = User.Identity as ClaimsIdentity;
    var name = identity?.FindFirst(ClaimTypes.Name)?.Value;
}

<div class="main">
    <div class="main_back">
        <img class="background" src="~/images/background.png" alt="CreepStat.gg" />
        <div class="content">
            <h1 class="title">CreepStat.gg</h1>

            <div class="loader">
                <img src="~/images/loading.gif" alt="Loading..." />
            </div>

            <div class="sponsor">
                <p>Sponsored by</p>
                <img src="~/images/openai-logo.png" alt="OpenAI" />
            </div>
        </div>
    </div>
</div>

<style>
    .main_back {
        position: relative;
        height: 100vh;
        overflow: hidden;
        background-color: #0f0f0f;
    }

    .background {
        object-fit: cover;
        opacity: 0.9;
        filter: brightness(0.6);
    }

    .content {
        position: absolute;
        inset: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .title {
        font-size: 9rem;
        color: #ffffff;
        font-family: 'Rubik', sans-serif;
        font-weight: 700;
        margin-bottom: 6rem;
        text-shadow: 0 0 20px rgba(0, 0, 0, 0.8), 0 0 40px rgba(255, 255, 255, 0.1);
        transition: transform 0.3s ease;
    }

    .title:hover {
        transform: scale(1.05);
    }

    .loader {
        margin-top: 2rem;
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .loader img {
        width: auto;
        opacity: 0.85;
        transition: transform 0.3s ease;
    }

    .loader img:hover {
        transform: scale(1.1);
    }


    .sponsor {
        margin-top: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        background: rgba(255, 255, 255, 0.05);
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        backdrop-filter: blur(6px);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .sponsor p {
        font-size: 1.25rem;
        color: #ffffff;
        margin: 0;
    }

    .sponsor img {
        width: 128px;
        height: auto;
        opacity: 0.9;
        transition: opacity 0.3s ease;
    }

    .sponsor img:hover {
        opacity: 1;
    }
</style>
